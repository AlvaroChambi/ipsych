<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/home_chat_button"
        style="@style/primary_text_with_background_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="24dp"
        android:text="@string/home_chat_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/home_info_button"
        style="@style/primary_text_with_background_style"
        android:maxLines="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="24dp"
        android:text="@string/home_info_message"
        app:layout_constraintEnd_toEndOf="@+id/home_chat_button"
        app:layout_constraintStart_toStartOf="@+id/home_chat_button"
        app:layout_constraintTop_toBottomOf="@+id/home_chat_button" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/home_message"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/home_info_button"
        app:layout_constraintStart_toStartOf="@+id/home_info_button"
        app:layout_constraintTop_toBottomOf="@+id/home_info_button" />
</android.support.constraint.ConstraintLayout>